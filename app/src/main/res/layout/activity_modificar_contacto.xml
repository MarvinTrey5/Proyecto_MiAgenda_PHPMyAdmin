<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#84FFFF"
    android:padding="10dp"
    tools:context=".RegistrarContacto">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Modificar Contacto \n Base De Datos \n Mi Agenda"
        android:textStyle="italic|bold"
        android:textSize="15dp"
        android:background="#00E676"/>
    <ImageView
        android:layout_width="220dp"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:layout_marginStart="80dp"
        android:layout_marginTop="65dp"
        android:src="@drawable/log"/>
    <EditText
        android:id="@+id/Mos_Nom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:hint="Nombre del contacto"
        android:layout_marginTop="275dp"/>
    <EditText
        android:id="@+id/Mos_Tel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:hint="TelÃ©fono"
        android:layout_marginTop="335dp"/>
    <Button
        android:id="@+id/Edit_Contac"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Modificar"
        android:textStyle="normal"
        android:textSize="8dp"
        android:drawableRight="@drawable/modificar"
        android:backgroundTint="#222950"
        android:layout_marginTop="395dp"/>
    <Button
        android:id="@+id/Del_Contac"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Eliminar"
        android:textStyle="normal"
        android:textSize="8dp"
        android:layout_marginStart="140dp"
        android:drawableRight="@drawable/el"
        android:backgroundTint="#222950"
        android:layout_marginTop="395dp"/>
    <Button
        android:id="@+id/Back_Base"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Back"
        android:textStyle="normal"
        android:textSize="9dp"
        android:drawableRight="@drawable/bac"
        android:backgroundTint="#222950"
        android:layout_marginStart="270dp"
        android:layout_marginTop="395dp"/>
</RelativeLayout>